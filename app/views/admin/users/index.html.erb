<h1>会員一覧</h1>

<div class="container px-5 px-sm-0">
  <div class="row">
  <table class="table table-hover table-inverse">

    <thead>
      <tr>
        <th>会員ID</th>
        <th>イメージ画像</th>
        <th>氏名</th>
        <th>メールアドレス</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%=user.id %></td>
        <td><%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td>
          <%= link_to admin_user_path(user) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
  </div>
</div>