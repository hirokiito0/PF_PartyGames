<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>会員情報</h2>
      <table class='table'>

        <tr>
          <%#= attachment_image_tag(customer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
        </tr>

        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>

      </table>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>投稿一覧</h2>
      <table class='table'>
        <thead>

          <tr>
            <th>画像</th>
            <th>ゲームタイトル</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>

        </thead>
       <table class='table table-hover table-inverse'>
        <tbody>

          <% @games.each do |game| %>
            <tr>
              <td>
                <%= link_to user_path(game.customer) do %>
                  <%#= attachment_image_tag(game.customer, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                <% end %>
              </td>

              <td>
                <%= link_to game.game_title, user_game_path(game), class: "game_#{game.id}" %>
              </td>

              <td>
                <%= game.game_introduction %>
                </td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>