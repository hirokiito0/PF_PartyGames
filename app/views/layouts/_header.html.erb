<header>
  <nav class = "navbar navbar-expand-lg navbar-light bg-success p-4">
    <div class = "container">
      <a class = "navbar-brand" href = "/"><span>Let's!! PartyGames</span></a>
      <% if admin_signed_in? || user_signed_in? %>
        <%= render 'layouts/search' %>
      <% end %>
      <button class = "navbar-toggler collapsed" type = "button" data-toggle = "collapse" data-target = "#navbarNavDropdown" aria-controls = "navbarNavDropdown" aria-expanded = "false" aria-label = "Toggle navigation">
        <span class = "navbar-toggler-icon"></span>
      </button>
      <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
        <ul class = "navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li><div class = "ml-5" ><%= link_to ' ゲーム一覧',   public_games_path,          class: "btn btn-outline-warning" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' 会員一覧 ',    admin_users_path,           class: "btn btn-outline-warning" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' ログアウト',   destroy_admin_session_path, class: "btn btn-outline-warning",method: :delete %></div></li>
        <% elsif user_signed_in? %>
          <li><div class = "ml-5" ><%= link_to ' ゲーム投稿',   new_public_game_path,           class: "btn btn-outline-warning" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' ゲーム一覧',   public_games_path,              class: "btn btn-outline-warning" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' マイページ',   public_user_path(current_user), class: "btn btn-outline-warning" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' ログアウト',   destroy_user_session_path,      class: "btn btn-outline-warning", method: :delete %></div></li>
        <% else %>
          <li><div class = "ml-5" ><%= link_to ' 新規登録',     new_user_registration_path, class: "btn btn-outline-warning" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' ログイン',     new_user_session_path ,     class: "btn btn-outline-warning" %></div></li>
        <% end %>
          <li></li>
        </ul>

      </div>

    </div>
  </nav>
</header>