<header>
  <nav class = "navbar navbar-expand-lg navbar-light bg-light p-4">
    <div class = "container">
      <a class = "navbar-brand" href = "/"><span>Let's!! PartyGames</span></a>
      <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target = "#navbarSupportedContent" aria-controls = "navbarSupportedContent" aria-expanded = "false" aria-label = "Toggle navigation">
        <span class = "navbar-toggler-icon"></span>
      </button>
      <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
        <ul class = "navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li><div class = "ml-5" ><%= link_to ' ゲーム一覧',   admin_games_path, class: "btn btn-outline-dark" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' 会員一覧 ',    admin_users_path, class: "btn btn-outline-dark" %></div></li>
