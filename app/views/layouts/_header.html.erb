          <li><div class = "ml-5" ><%= link_to ' ゲーム一覧',   public_games_path,                            class: "btn btn-outline-dark" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' マイページ',   public_user_path(current_user), class: "btn btn-outline-dark" %></div></li>
          <li><div class = "ml-5" ><%= link_to ' ログアウト',   destroy_user_session_path,                  class: "btn btn-outline-dark", method: :delete %></div></li>
