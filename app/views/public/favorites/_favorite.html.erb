<% if @game.favorited_by?(current_user) %>
<p>
  <%= link_to public_game_favorites_path(@game), method: :delete, remote: true do %>
    ♥<%= @game.favorites.count %> いいね
  <% end %>
</p>
<% else %>
<p>
  <%= link_to public_game_favorites_path(@game), method: :post, remote: true do %>
    ♡<%= @game.favorites.count %> いいね
  <% end %>
</p>
<% end %>