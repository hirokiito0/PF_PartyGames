<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class='text-center' style="margin-bottom: 20px; padding: 10px;">投稿ゲーム編集</h2>
    <%= form_with model: @game, url: public_game_path(@game), local:true do |f| %>
      <%#= render 'layouts/errors', obj: @user %>

      <div class="form-group">
        <%= f.label :game_title %>
        <%= f.text_field :game_title, class: "form-control name" %>
      </div>

     <div class="form-group">
        <%= f.label :game_image %>
        <%= f.attachment_field :game_image, class: "form-control-file user_image" %>
      </div>

      <div class="form-group">
        <%= f.label :game_introduction %>
        <%= f.text_area :game_introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label :recommended %>
        <%= f.text_area :recommended, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary', style:"display:block; margin: 0 auto;" %>
      </div>

    <% end %>
  </div>
</div>
</div>
