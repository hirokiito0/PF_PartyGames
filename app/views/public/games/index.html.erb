<h1 class="item pt-1 pl-3">投稿ゲーム一覧</h1>
  <div class="social">
    <%= link_to new_public_game_path do %>
      <i class="fas fa-plus-circle fa-2x"></i>
    <% end %>
  </div>
<div class="container px-5 px-sm-0">
  <div class="row">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
      <th></th>
      <th></th>
      <th>ゲームタイトル</th>
      <th>紹介文</th>
      <th></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
      <tr>
        <td>
          <%= link_to public_game_path(game.id) do %>
            <%= attachment_image_tag(game, :game_image, :fill, 50, 50, fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td></td>
        <td><%= link_to game.game_title, public_game_path(game.id) %></td>
        <td><%= game.game_introduction %></td>
        <td></td>

      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>