<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class='text-center' style="margin-bottom: 20px; padding: 10px;">会員情報編集</h2>
    <%= form_with model: @user, url: public_user_path(current_user), local:true do |f| %>
      <%#= render 'layouts/errors', obj: @user %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

     <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :image, class: "form-control-file user_image" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary', style:"display:block; margin: 0 auto;" %>
      </div>

    <% end %>
  </div>
</div>
