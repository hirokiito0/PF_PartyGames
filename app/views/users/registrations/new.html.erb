<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4 style="margin-bottom: 20px; padding: 10px;">新規会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <label>名前</label><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group">
          <label>メールアドレス</label><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <label>パスワード</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <label>パスワード（確認用）</label><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class:"btn btn-success", style:"display:block; margin: 0 auto;"%>
        </div>
        <%= link_to new_user_session_path do %>
          <span class="glyphicon glyphicon-chevron-left">ログインはこちら</span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>